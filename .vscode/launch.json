{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug with Poetry",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/src/streetrace/main.py", // or whatever entry point
      "console": "integratedTerminal",
      "envFile": "${workspaceFolder}/.env",
      "args": [
        "--agent",
        "generic",
        "--model",
        "anthropic/claude-sonnet-4-20250514",
        "--verbose",
        "--prompt",
        "Can you check open issues in streetrace-ai/streetrace GitHub repo and identify the most important one to work on right now?"
      ],
      "justMyCode": false
    }
  ]
}
