{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug with Poetry",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/src/streetrace/main.py", // or whatever entry point
      "console": "integratedTerminal",
      "envFile": "${workspaceFolder}/.env",
      "args": [
        "--agent",
        "GenericCodingAssistant",
        "--model",
        "anthropic/claude-sonnet-4-20250514",
        "--verbose",
        "--prompt",
        "Analyze issue  https://github.com/streetrace-ai/streetrace/issues/76, create the implementation plan, and execute the implementation"
      ],
      "justMyCode": false
    }
  ]
}
